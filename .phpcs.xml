<?xml version="1.0"?>
<ruleset name="wikimedia-slimapp">
	<file>.</file>
	<exclude-pattern>doc/html</exclude-pattern>

	<arg name="encoding" value="UTF-8"/>
	<arg name="extensions" value="php"/>
	<arg name="report" value="full"/>
	<arg name="report" value="summary"/>
	<arg value="sp"/>

	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki" />
	<rule ref="MediaWiki.Usage.SuperGlobalsUsage.SuperGlobals">
		<severity>0</severity>
	</rule>
	<rule ref="MediaWiki.Commenting.FunctionComment.MissingParamComment">
		<severity>0</severity>
	</rule>
	<rule ref="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment.NewLineComment">
		<severity>0</severity>
	</rule>
	<rule ref="MediaWiki.Commenting.FunctionComment.DefaultNullTypeParam">
		<severity>0</severity>
	</rule>
	<rule ref="Generic.PHP.DeprecatedFunctions.Deprecated">
		<severity>0</severity>
	</rule>
</ruleset>
